    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "dart",
            "request": "launch",
            "name": "Flutter pub get",
            "program": "",
            "cwd": "${workspaceFolder}/assets",
            "toolArgs": [
                "pub",
                "get"
            ],
            "noDebug": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "silownia_app",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "silownia_app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "silownia_app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}